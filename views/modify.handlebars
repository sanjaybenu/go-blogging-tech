{{#if loggedIn}}
<div style="height:100vh; margin-top: 20%; ">
<div class="mx-auto" style="width: 65%;">

<form id="modifyForm" data-blog-id="{{blog.id}}">

 

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="{{blog.title}}">
   
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea type="text" class="form-control" id="description" name="description">{{blog.description}}</textarea>
  </div>
  
  <button type="submit" class="btn btn-primary" id="modifyFormBtn">Modify</button>
</form>

</div>
</div>
{{/if}}

<script src="/js/modify.js"></script>