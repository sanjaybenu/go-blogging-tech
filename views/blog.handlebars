{{#if loggedIn}}
<div class="d-flex justify-content-center align-items-center">
<div class="card mx-auto text-center" style="width: 70%;margin-top:10%">
  <h5 class="card-title bg-secondary text-light">{{blog.title}}</h5>
  <div class="card-body">    
    <p class="card-text">{{blog.description}}</br> <span class="h4">Author:</span></br>{{blog.user.f_name}} at {{blog.timestamp}}</p>
    <h4>Comments:</h4>
    {{#each blog.comments}}
    <div >
    <p class="card-text">{{comment}}</br><span style="font-size: 10px;">by:{{user.username}} on {{timestamp}}</p></span>
    </div>
   
   {{/each}}
    <a href="/api/users/comment/{{blog.id}}" style="text-decoration:none;"><button class="btn btn-outline-primary" >Add a Commment</button></a> 
    
  </div>
</div>
</div>
{{/if}}

